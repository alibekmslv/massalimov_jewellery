---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <h1 class="visually-hidden">Jewellery's website catalog page</h1>
  <div
    class="page-banner page-banner--catalog text-center"
    data-color-mode="dark"
    data-dark-theme="dark_pastel"
  >
    <div class="page-banner__content container">
      <h2 class="title text-upper">All Jewellery</h2>
      <p class="subtitle subtitle--italic">
        Discover picks of fashion's finest trends in our jewellery catalog
      </p>
    </div>
  </div>
  <section class="section-catalog container">
    <div class="section-catalog__wrapper">
      <div class="section-catalog__filter-form filter-form">
        <h2 class="visually-hidden">Products Filter</h2>
        <button
          class="button button--primary button--large button--block filter-form__open-button"
          type="button">Filter</button
        >
        <!-- filter-form__form--open -->
        <form
          class="filter-form__form"
          action="#"
          data-color-mode="light"
          data-light-theme="light"
        >
          <button
            class="close-button close-button--round filter-form__close-button"
            type="button"
            aria-label="Close Filter"
          >
            <svg
              class="close-button__icon"
              width="14"
              height="14"
              aria-hidden="true"
            >
              <use xlink:href="/img/sprite_auto.svg#icon-close-cross"></use>
            </svg>
          </button>
          <div
            class="accordion accordion--filter filter-form__accordion filter-form-accordion-trigger"
          >
            <!-- accordion__item--open -->
            <fieldset class="accordion__item accordion__item--open">
              <h3>Product</h3>
              <div class="accordion__body">
                <label class="checkbox">
                  <input
                    type="checkbox"
                    name="category"
                    checked
                    value="necklaces"
                  />
                  <svg
                    class="checkbox__icon"
                    width="15"
                    height="15"
                    aria-hidden="true"
                  >
                    <use
                      class="checkbox__icon-unchecked"
                      xlink:href="/img/sprite_auto.svg#icon-checkbox"></use>
                    <use
                      class="checkbox__icon-checked"
                      xlink:href="/img/sprite_auto.svg#icon-checkbox-checked"
                    ></use>
                  </svg>
                  Necklaces
                </label>
                <label class="checkbox">
                  <input
                    type="checkbox"
                    name="category"
                    checked
                    value="chokers"
                  />
                  <svg
                    class="checkbox__icon"
                    width="15"
                    height="15"
                    aria-hidden="true"
                  >
                    <use
                      class="checkbox__icon-unchecked"
                      xlink:href="/img/sprite_auto.svg#icon-checkbox"></use>
                    <use
                      class="checkbox__icon-checked"
                      xlink:href="/img/sprite_auto.svg#icon-checkbox-checked"
                    ></use>
                  </svg>
                  Chokers
                </label>
                <label class="checkbox">
                  <input type="checkbox" name="category" value="rings" />
                  <svg
                    class="checkbox__icon"
                    width="15"
                    height="15"
                    aria-hidden="true"
                  >
                    <use
                      class="checkbox__icon-unchecked"
                      xlink:href="/img/sprite_auto.svg#icon-checkbox"></use>
                    <use
                      class="checkbox__icon-checked"
                      xlink:href="/img/sprite_auto.svg#icon-checkbox-checked"
                    ></use>
                  </svg>
                  Rings
                </label>
                <label class="checkbox">
                  <input
                    type="checkbox"
                    name="category"
                    checked
                    value="earrings"
                  />
                  <svg
                    class="checkbox__icon"
                    width="15"
                    height="15"
                    aria-hidden="true"
                  >
                    <use
                      class="checkbox__icon-unchecked"
                      xlink:href="/img/sprite_auto.svg#icon-checkbox"></use>
                    <use
                      class="checkbox__icon-checked"
                      xlink:href="/img/sprite_auto.svg#icon-checkbox-checked"
                    ></use>
                  </svg>
                  Earrings
                </label>
              </div>
              <button
                class="accordion__button"
                type="button"
                aria-label="Dropdown button"
              >
                <svg
                  class="accordion__icon"
                  width="15"
                  height="10"
                  aria-hidden="true"
                >
                  <use xlink:href="/img/sprite_auto.svg#icon-dropdown-arrow"
                  ></use>
                </svg>
              </button>
            </fieldset>
            <fieldset class="accordion__item">
              <h3>Material</h3>
